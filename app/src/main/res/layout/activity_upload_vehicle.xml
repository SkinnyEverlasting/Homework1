<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadVehicleActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/capsule_background"
        android:backgroundTint="@color/button_background"
        android:src="@mipmap/image"
        android:padding="20dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addVehicleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a vehicle"
        android:layout_marginTop="30dp"
        android:textColor="@color/text_color"
        android:textSize="35sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This information will help \nus provide the most\n relevant data"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/info_text_color"
        android:textSize="20sp"
        android:lineHeight="35sp"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addVehicleTitle" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addButton"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/capsule_background"
        android:backgroundTint="@color/action_color"
        android:padding="12dp"
        android:text="Add +"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facebookButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/capsule_background"
        android:backgroundTint="@color/button_background"
        android:padding="12dp"
        android:text="skip"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="75dp"
        app:layout_constraintTop_toBottomOf="@+id/addButton" />




</androidx.constraintlayout.widget.ConstraintLayout>